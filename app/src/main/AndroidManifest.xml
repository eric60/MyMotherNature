<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ericshi.mymothernature">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.application.mymothernature.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.application.mymothernature.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.application.mymothernature.ChooseCategoryActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.application.mymothernature.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.application.mymothernature.LeaderBoardActivity"
            android:label="@string/title_activity_leader_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.application.mymothernature.LoginActivity2"
            android:label="@string/title_activity_login2" />
        <activity
            android:name="com.application.mymothernature.GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.application.mymothernature.BeforeGameStart"
            android:label="@string/title_activity_before_game_start"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.application.mymothernature.UploadQuestion"
            android:label="@string/title_activity_upload_question"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.application.mymothernature.AfterGame"
            android:label="@string/title_activity_after_game"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>